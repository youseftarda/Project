<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Khadamati_App.SuccessPopup">
    <Frame BackgroundColor="{StaticResource Primary}" Padding="20" CornerRadius="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="{Binding Message}" TextColor="White" FontFamily="Cairo-Regular" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Frame>
</toolkit:Popup>
